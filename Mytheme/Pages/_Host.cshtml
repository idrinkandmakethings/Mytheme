@page "/"
@namespace Mytheme.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mytheme</title>
    <base href="~/" />
    <style>

        html, body {
            margin: 0;
            padding: 0;
            position: absolute; /* this is very important*/
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
        }
    </style>
    <link rel="stylesheet" href="/css/mytheme.css" />
    <link rel="stylesheet" href="_content/Mytheme.Map/leaflet.css" />
    <script src="js/browserResizeInterop.js"></script>
    <script src="js/href-interceptor.js"></script>
    <script src="_content/Mytheme.Map/leaflet.js"></script>
    <script src="_content/Mytheme.Map/leafletInterops.js"></script>
    <script src="_content/BlazorInputFile/inputfile.js"></script>
    <script src="_content/CurrieTechnologies.Razor.Clipboard/clipboard.min.js"></script>
    @(await Html.RenderComponentAsync<BlazorStyled.ServerSideStyled>(RenderMode.Server))
</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.Server))
    </app>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
